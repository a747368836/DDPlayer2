<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="@dimen/qb_px_180"
    android:background="@color/colorPrimary"
    android:gravity="bottom"
    android:fitsSystemWindows="true"
    android:theme="@style/Theme.AppCompat.Light.NoActionBar">

    <ImageView
        android:id="@+id/small_tv_cry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alpha="0.5"
        android:clickable="true"
        android:focusable="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:src="@mipmap/bili_drawerbg_not_logined"
        />
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ivAvatar"
        android:layout_width="@dimen/qb_px_48"
        android:layout_height="@dimen/qb_px_48"
        android:layout_marginStart="@dimen/qb_px_16"
        android:layout_marginTop="@dimen/qb_px_16"
        android:src="@mipmap/ico_user_default"

        />

    <TextView
        android:id="@+id/tv_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/qb_px_10"
        android:text="点击头像登录"
        android:textColor="#ffffff"
        android:textSize="14sp"
        android:layout_marginStart="@dimen/qb_px_16"
        android:layout_below="@id/ivAvatar"
         />



    <TextView
        android:id="@+id/tv_coins"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textColor="#ddffffff"
        android:text="B币：0.0  硬币：121.7"
        android:textSize="12sp"
        android:layout_below="@id/tv_nickname"
        android:visibility="invisible"
        android:layout_marginStart="@dimen/qb_px_16"
 />


</RelativeLayout>
